            <set name="weight" lb="6">6 Pfund</set>
            <set name="slot">twohand</set>
            <set name="damage" type="Hieb">2W6</set>
            <set name="proficiency">ID_PROFICIENCY_WEAPON_PROFICIENCY_GREATSWORD</set>
        </setters>
