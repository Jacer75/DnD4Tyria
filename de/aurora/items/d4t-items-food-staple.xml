    <!-- Grade 1: Grundnahrungsmittel / Zutaten -->
    <element name="Karotte" type="Item" source="DnD4Tyria" id="ID_D4T_ITEM_FOOD_STAPLE_CARROT">
        <description>
            <p>Knackiges Wurzelgemüse, das roh wie gekocht ordentlich Substanz bringt.</p>
        </description>
        <setters>
            <set name="category">Grundnahrungsmittel</set>
            <set name="cost" currency="cp">1</set>
            <set name="weight" lb="0.2">0,1 kg</set>
            <set name="stackable">true</set>
            <set name="type">Sättigung und Ausdauer (Constitution)</set>
            <set name="grade">1</set>
            <set name="region">Kryta (Ackerland), Gendarran, gelegentlich Caledon-Gärten.</set>
            <set name="dc">10</set>
        </setters>
    </element>
    <element name="Salatkopf" type="Item" source="DnD4Tyria" id="ID_D4T_ITEM_FOOD_STAPLE_LETTUCE">
        <description>
            <p>Frisch und wasserreich – gut für leichte Speisen und schnelle Beilagen.</p>
        </description>
        <setters>
            <set name="category">Grundnahrungsmittel</set>
            <set name="cost" currency="cp">1</set>
            <set name="weight" lb="0.2">0,1 kg</set>
            <set name="stackable">true</set>
            <set name="type">keine</set>
            <set name="grade">1</set>
            <set name="region">Kryta (Höfe), Löwenstein-Umland, feuchte Felder in Gendarran.</set>
            <set name="dc">10</set>
        </setters>
    </element>
    <element name="Pilz" type="Item" source="DnD4Tyria" id="ID_D4T_ITEM_FOOD_STAPLE_MUSHROOM">
