            <set name="cost" currency="cp">1</set>
            <set name="weight" lb="0.2">0,1 kg</set>
            <set name="stackable">true</set>
            <set name="type">Wachsamkeit und Instinkt (Wisdom)</set>
            <set name="grade">1</set>
            <set name="region">Caledon-Wald, Maguuma-Randgebiete, schattige Regionen in Kryta.</set>
            <set name="dc">11</set>
