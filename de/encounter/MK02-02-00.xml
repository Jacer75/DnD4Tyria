      <senses>passive Wahrnehmung 11</senses>
      <languages>Tyrianisch, Nornisch</languages>
      <challenge>1</challenge>
      <resistances>Kälte, Hieb-, Stich- und Wuchtschaden im Kampfrausch</resistances>
      <conditionImmunities></conditionImmunities>
    </meta>
  
    <abilities>
      <ability name="Str" score="16" bonus="+3"/>
      <ability name="Dex" score="12" bonus="+1"/>
      <ability name="Con" score="14" bonus="+2"/>
      <ability name="Int" score="8" bonus="-1"/>
