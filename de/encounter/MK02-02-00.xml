  <statblock name="Lira Dornsang" id="id-lira-dornsang">
    <meta>
      <size>Mittel</size>
      <type>Humanoid (Norn)</type>
      <alignment>chaotisch gut</alignment>
      <ac>15 (Fellrüstung)</ac>
      <hp>30 (3W12 + 3)</hp>
