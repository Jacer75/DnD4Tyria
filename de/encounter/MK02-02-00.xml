        <spell id="ID_D4T_SPELL_HEALING_WORD" level="1">Heilendes Wort (Healing Word)</spell>
        <spell id="ID_D4T_SPELL_GUIDING_BOLT" level="1">Lenkendes Geschoss (Guiding Bolt)</spell>
        <spell id="ID_D4T_SPELL_SHIELD_OF_FAITH" level="1">Schild des Glaubens (Shield of Faith)</spell>
        <spell id="ID_D4T_SPELL_CURE_WOUNDS" level="1">Wunden heilen (Cure Wounds)</spell>
        <spell id="ID_D4T_SPELL_INFLICT_WOUNDS" level="1">Wunden verursachen (Inflict Wounds)</spell>
