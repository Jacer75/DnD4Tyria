<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="../../xslt/statblock.xsl"?>

<encounter>
  <info>
    <name>Schlacht am Ziggurat</name>
    <file>MK02-05-01.xml</file>
    <abenteuer>MK02-05 Der Schattenherzgrund</abenteuer>
    <kampagne>MK02 - Die Jagd nach Calmor Vael</kampagne>
  </info>

  <statblock name="Auferstandener Zentaurenschamane" id="id-d4t-undead-centaur-shaman">
  <meta>
    <size>Groß</size>
    <type>Untoter</type>
    <alignment>chaotisch böse</alignment>
    <ac>15 (natürliche Rüstung)</ac>
    <hp>102 (12W10 + 36)</hp>
    <speed>12 m</speed>
    <senses>passive Wahrnehmung 16</senses>
    <languages>Tyrianisch, Sylvanisch, Zentaurisch</languages>
    <challenge>6</challenge>
    <resistances>Nekrotisch</resistances>
    <immunities>Gift</immunities>
    <conditionImmunities>Vergiftet</conditionImmunities>
  </meta>

  <abilities>
    <ability name="Str" score="18" bonus="+4"/>
    <ability name="Dex" score="12" bonus="+1"/>
    <ability name="Con" score="16" bonus="+3"/>
    <ability name="Int" score="10" bonus="+0"/>
    <ability name="Wis" score="16" bonus="+3"/>
    <ability name="Cha" score="14" bonus="+2"/>
  </abilities>

  <saves>
    <save ability="Wis" bonus="+6"/>
    <save ability="Con" bonus="+6"/>
  </saves>

  <skills>
    <skill name="Wahrnehmung" bonus="+6"/>
    <skill name="Religion" bonus="+3"/>
  </skills>

  <traits>
    <trait name="Untotenbefehl (Bonusaktion)">
      <description>Bis zu drei Zombies im Umkreis von 9 m führen sofort eine Bewegung oder einen Angriff aus, sofern sie ihn hören und verstehen.</description>
    </trait>
    <trait name="Stampfen (Trampelstoß)">
      <description>Bewegt sich der Schamane mindestens 6 m geradeaus und trifft anschließend mit einem Nahkampfangriff, muss das Ziel einen ST-Rettungswurf SG 14 bestehen oder es wird zu Boden geworfen (liegend).</description>
    </trait>
    <trait name="Verderbnis des Sumpfs">
      <description>Der Schamane ignoriert schwieriges Gelände durch Schlamm, Morast und seichtes Wasser.</description>
    </trait>
  </traits>

  <actions>
    <action name="Mehrfachangriff">
      <description>Der Schamane führt zwei Angriffe mit Hufen aus <i>oder</i> wirkt einen Zauber und benutzt Untotenbefehl (sofern verfügbar).</description>
    </action>
  </actions>

  <attacks>
    <attack name="Hufe">
      <type>Nahkampf</type>
      <bonus>+6</bonus>
      <range>1,50 m</range>
      <target>ein Ziel</target>
      <damage>11 (2W6 + 4) Wuchtschaden</damage>
    </attack>
    <attack name="Geisterbrand">
      <type>Fernkampf (Zauberangriff)</type>
      <bonus>+6</bonus>
      <range>9 m</range>
      <target>ein Ziel</target>
      <damage>18 (4W8) nekrotischer Schaden</damage>
    </attack>
  </attacks>

  <reactions>
    <!-- keine -->
  </reactions>

  <spellcasting>
    <stat>Wis</stat>
    <saveDC>14</saveDC>
    <attackBonus>+6</attackBonus>
    <spelllist>
      <spell id="ID_D4T_SPELL_POISON_SPRAY" level="0">Gift versprühen (Poison Spray)</spell>
      <spell id="ID_D4T_SPELL_GUIDANCE" level="0">Führung (Guidance)</spell>
      <spell id="ID_D4T_SPELL_ENTANGLE" level="1">Fesseln (Entangle)</spell>
      <spell id="ID_D4T_SPELL_INFLICT_WOUNDS" level="1">Wunden zufügen (Inflict Wounds)</spell>
      <spell id="ID_D4T_SPELL_HOLD_PERSON" level="2">Person festhalten (Hold Person)</spell>
      <spell id="ID_D4T_SPELL_SHATTER" level="2">Zerbersten (Shatter)</spell>
      <spell id="ID_D4T_SPELL_BESTOW_CURSE" level="3">Fluch auferlegen (Bestow Curse)</spell>
      <spell id="ID_D4T_SPELL_COUNTERSPELL" level="3">Gegenzauber (Counterspell)</spell>
      <spell id="ID_D4T_SPELL_SPIRIT_GUARDIANS" level="3">Geisterhafte Wächter (Spirit Guardians)</spell>
    </spelllist>
    <slots>
      <slot level="1" count="4"/>
      <slot level="2" count="3"/>
      <slot level="3" count="2"/>
    </slots>
  </spellcasting>
</statblock>

  <statblock name="Zombie" id="id-d4t-npc-zombie">
  <meta>
    <size>Mittel</size>
    <type>Untoter</type>
    <alignment>neutral böse</alignment>
    <ac>8</ac>
    <hp>22 (3W8 + 9)</hp>
    <speed>6 m</speed>
    <senses>Dunkelsicht 18 m, passive Wahrnehmung 8</senses>
    <languages>Versteht die Sprachen, die es im Leben kannte (kann aber nicht sprechen)</languages>
    <challenge>1/4</challenge>
    <immunities>Gift</immunities>
    <conditionImmunities>Vergiftet</conditionImmunities>
  </meta>

  <abilities>
    <ability name="Str" score="13" bonus="+1"/>
    <ability name="Dex" score="6" bonus="-2"/>
    <ability name="Con" score="16" bonus="+3"/>
    <ability name="Int" score="3" bonus="-4"/>
    <ability name="Wis" score="6" bonus="-2"/>
    <ability name="Cha" score="5" bonus="-3"/>
  </abilities>

  <saves>
    <save ability="Wis" bonus="+0"/>
  </saves>

  <traits>
    <trait name="Untote Zähigkeit">
      <description>Wird der Zombie auf 0 Trefferpunkte reduziert, macht er einen Konstitutionsrettungswurf mit SG 5 + erlittenem Schaden, außer der Schaden war strahlend oder ein kritischer Treffer. Bei Erfolg fällt er stattdessen auf 1 Trefferpunkt.</description>
    </trait>
  </traits>

  <attacks>
    <attack name="Hieb">
      <type>Nahkampf</type>
      <bonus>+3</bonus>
      <range>1,50 m</range>
      <target>ein Ziel</target>
      <damage>4 (1W6 + 1) Wuchtschaden</damage>
    </attack>
  </attacks>
</statblock>

  <statblock name="Auferstandener Ettin" id="id-d4t-undead-ettin">
  <meta>
    <size>Groß</size>
    <type>Untoter</type>
    <alignment>chaotisch böse</alignment>
    <ac>12 (natürliche Rüstung)</ac>
    <hp>95 (10W10 + 40)</hp>
    <speed>12 m</speed>
    <senses>Dunkelsicht 18 m, passive Wahrnehmung 14</senses>
    <languages>versteht Riesisch und Tyrianisch; bruchstückliche, heisere Sprache</languages>
    <challenge>5</challenge>
    <resistances>Nekrotisch</resistances>
    <immunities>Gift</immunities>
    <conditionImmunities>Vergiftet</conditionImmunities>
  </meta>

  <abilities>
    <ability name="Str" score="21" bonus="+5"/>
    <ability name="Dex" score="8" bonus="-1"/>
    <ability name="Con" score="18" bonus="+4"/>
    <ability name="Int" score="6" bonus="-2"/>
    <ability name="Wis" score="10" bonus="+0"/>
    <ability name="Cha" score="8" bonus="-1"/>
  </abilities>

  <saves>
    <save ability="Con" bonus="+7"/>
    <save ability="Wis" bonus="+2"/>
  </saves>

  <skills>
    <skill name="Wahrnehmung" bonus="+4"/>
  </skills>

  <traits>
    <trait name="Zwei Köpfe">
      <description>Der Ettin hat Vorteil auf Würfe für Wahrnehmung sowie auf Rettungswürfe gegen Blind, Bezaubert, Taub, Verängstigt und Betäubt.</description>
    </trait>
    <trait name="Untote Zähigkeit">
      <description>Wird der Ettin auf 0 TP reduziert, macht er einen Konstitutionsrettungswurf (SG 5 + erlittenen Schaden). Bei Erfolg fällt er stattdessen auf 1 TP (außer der Schaden war strahlend oder ein kritischer Treffer).</description>
    </trait>
    <trait name="Leichengestank (Aura 3 m)">
      <description>Kreaturen, die ihren Zug innerhalb von 3 m um den Ettin beginnen, müssen einen Konstitutionsrettungswurf SG 14 bestehen, sonst sind sie bis zum Beginn ihres nächsten Zuges vergiftet (Vergiftet). Bei Erfolg ist die Kreatur 24 Stunden gegen diesen Gestank immun.</description>
    </trait>
  </traits>

  <actions>
    <action name="Mehrfachangriff">
      <description>Der Ettin führt zwei Angriffe aus: einen mit der Morgenstern-Keule und einen mit der Streitaxt.</description>
    </action>
  </actions>

  <attacks>
    <attack name="Morgenstern-Keule">
      <type>Nahkampf</type>
      <bonus>+8</bonus>
      <range>1,50 m</range>
      <target>ein Ziel</target>
      <damage>14 (2W8 + 5) Stichschaden</damage>
    </attack>
    <attack name="Streitaxt">
      <type>Nahkampf</type>
      <bonus>+8</bonus>
      <range>1,50 m</range>
      <target>ein Ziel</target>
      <damage>10 (1W10 + 5) Hiebschaden</damage>
    </attack>
  </attacks>

  <reactions>
    <!-- keine -->
  </reactions>
</statblock>

</encounter>
