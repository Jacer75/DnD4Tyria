  <abilities>
    <ability name="Str" score="14" bonus="+2"/>
    <ability name="Dex" score="12" bonus="+1"/>
    <ability name="Con" score="13" bonus="+1"/>
    <ability name="Int" score="10" bonus="+0"/>
    <ability name="Wis" score="12" bonus="+1"/>
    <ability name="Cha" score="8" bonus="-1"/>
  </abilities>

  <traits>
    <trait name="Gezielte Jagd">
      <description>Der Fangmeister hat Vorteil bei Angriffen gegen wehrlose oder bewegungsunfähige Ziele.</description>
    </trait>
    <trait name="Beute sichern">
      <description>Wenn ein Ziel 0 TP erreicht, kann es als Reaktion stabilisiert und mit Tentakeln umschlungen werden – es gilt als gefangen statt bewusstlos.</description>
    </trait>
  </traits>

  <actions>
    <action name="Zugleine">
      <description>Bonusaktion: Zieht ein gefesseltes Ziel in 6 m Umkreis 3 m näher (SG 13 Stärke).</description>
    </action>
  </actions>

  <attacks>
    <attack name="Dreizack">
      <type>Nahkampf</type>
      <bonus>+4</bonus>
      <range>1,50 m</range>
      <target>ein Ziel</target>
      <damage>6 (1W8 + 2) Stichschaden</damage>
    </attack>
  </attacks>
</statblock>

