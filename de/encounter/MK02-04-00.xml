<statblock name="Krait-Netzjäger" id="id-krait-netzjaeger">
  <meta>
    <size>Mittel</size>
    <type>Humanoid</type>
    <alignment>chaotisch böse</alignment>
    <ac>13</ac>
    <hp>16 (3W8 + 3)</hp>
    <speed>9 m, Schwimmen 9 m</speed>
    <senses>passive Wahrnehmung 10</senses>
    <languages>Tyrianisch</languages>
    <challenge>1/4</challenge>
  </meta>

  <abilities>
    <ability name="Str" score="12" bonus="+1"/>
    <ability name="Dex" score="14" bonus="+2"/>
    <ability name="Con" score="13" bonus="+1"/>
    <ability name="Int" score="8" bonus="-1"/>
    <ability name="Wis" score="10" bonus="+0"/>
    <ability name="Cha" score="6" bonus="-2"/>
  </abilities>

  <actions>
    <action name="Netz werfen">
      <description>Ein Ziel in 3/6 m Reichweite muss einen SG 10 Stärke- oder SG 12 Geschicklichkeitswurf bestehen, um sich als Aktion zu befreien. Das Netz hat RK 10, 5 TP.</description>
    </action>
  </actions>

  <attacks>
    <attack name="Speer (Harpune)">
      <type>Nah- oder Fernkampf</type>
      <bonus>+4</bonus>
      <range>1,50 m oder 6/18 m</range>
      <target>ein Ziel</target>
      <damage>5 (1W6 + 2) Stichschaden</damage>
    </attack>
  </attacks>
</statblock>

